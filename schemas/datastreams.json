{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "pattern": "/^[a-f\d]{24}$/i",
      "maxLength": 24 
    },
    "attributes": {"type": "object"},
    "created_at": { 
      "type": "string", 
      "pattern": "/^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$/"
    },
    "datapoints_config": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "begins_at": { 
            "type": "string", 
            "pattern": "/^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$/"
          },
          "ends_before": { 
            "type": "string", 
            "pattern": "/^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$/"
          },
          "params": {"type": "object"},
          "path": {"type": "string"}
        },
        "required": ["begins_at", "ends_before", "params", "path"],
        "additionalProperties": false
      }
    },
    "derivation_description": {"type": "string"},
    "derived": {"type": "boolean"},
    "description": {"type": "string"},
    "enabled": {"type": "boolean"},
    "geo": {
      "type": "object",
      "properties": {
        "coordinates": {
          "type": "array",
          "minLength": 2,
          "maxLength": 2,
          "items": {"type": "number"}
        },
        "type": {
          "type": "string",
          "enum": ["Point"]
        }
      },
      "required": ["coordinates", "type"]
    },
    "members": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "organization_id": {
            "type": "string",
            "pattern": "/^[a-f\d]{24}$/",
            "maxLength": 24
          },
          "person_id": {
            "type": "string",
            "pattern": "/^[a-f\d]{24}$/",
            "maxLength": 24
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 50
            }
          }
        },
        "required": ["roles"]
      }
    },
    "name": {"type": "string"},
    "source_type": {
      "type": "string",
      "enum": ["sensor"]
    },
    "state": {
      "type": "string",
      "enum": ["ready"]
    },
    "station_id": {"type": "string"},
    "tags": {
      "type": "array",
      "items": {"type": "string"}
    },
    "thing_id": { 
      "type": "string",
      "pattern": "/^[a-f\d]{24}$/i",
      "maxLength": 24 
    },
    "urls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {"type": "string"},
          "url": {
            "type": "string",
            "format": "url"
          }
        }
      }
    }    
  },
  "required": ["derived", "enabled", "name"],
  "additionalProperties": false
}