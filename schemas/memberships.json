{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": { 
      "type": "string",
      "pattern": "/^[a-f\d]{24}$/i",
      "maxLength": 24 
    },
    "created_at": { 
      "type": "string", 
      "pattern": "/^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$/"
    },
    "organization_id": { 
      "type": "string",
      "pattern": "/^[a-f\d]{24}$/i",
      "maxLength": 24 
    },
    "person_id": { 
      "type": "string",
      "pattern": "/^[a-f\d]{24}$/i",
      "maxLength": 24 
    },
    "roles": {
      "type": "array",
      "items": {"type": "string"},
      "maxLength": 50
    }
  },
  "required": ["roles"],
  "additionalProperties": false
}