{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": {
      "$ref": "#/definitions/objectId"
    },
    "created_at": {
      "$ref": "#/definitions/isoDate"
    },
    "updated_at": {
      "$ref": "#/definitions/isoDate"
    },
    "email": {
      "type": "string"
    },
    "name": {
      "type": "string"
    }
  },
  "definitions": {
    "objectId": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{24}$",
      "maxLength": 24
    },
    "isoDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2}|.|[0-9]{0,3}Z$"
    }
  },
  "required": ["name"],
  "additionalProperties": false
}