{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "maxLength": 50
    },
    "created_at": {"$ref": "#/definitions/isoDate"},
    "updated_at": {"$ref": "#/definitions/isoDate"},
    "description": { 
      "type": "string", 
      "maxLength": 2000 
    },
    "name": { 
      "type": "string", 
      "maxLength": 200
    },
    "url": {
      "type": "string",
      "format": "url"
    },
    "version": {"type": "string"}
  },
  "definitions": {
    "objectId": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{24}$",
      "maxLength": 24
    },
    "isoDate": {
      "type": "string", 
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$"
    }
  },
  "required": ["name"],
  "additionalProperties": false
}