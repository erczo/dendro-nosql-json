{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": { 
      "type": "string", 
      "maxLength": 50 
    },
    "created_at": { 
      "type": "string", 
      "pattern": "/^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$/"
    },
    "updated_at": { 
      "type": "string", 
      "pattern": "/^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$/"
    },
    "description": { 
      "type": "string", 
      "maxLength": 2000 
    },
    "name": { 
      "type": "string", 
      "maxLength": 200
    },
    "url": {
      "type": "string",
      "format": "url"
    },
    "version": {"type": "string"}
  },
  "required": ["name"],
  "additionalProperties": false
}