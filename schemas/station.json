{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": { "type": "string", "maxLength": 50 },
    "activated_at": { "type": "string" },
    "altitude": {
      "type": "object",
      "properties": {
        "elevation": { "type": "number" }
      },
      "required": ["elevation"]
    },
    "created_at": { "type": "string" },
    "datastreams_ids": {"type": "array"},
    "deactivated_at": {"type": "string"},
    "enabled": { "type": "boolean" },
    "full_name": { "type": "string" },
    "geo": {
      "type": "object",
      "properties": {
        "coordinates": {"type": "array", "minLength": 2, "maxLength": 2},
        "type": {"type": "string"}
      },
      "required": ["coordinates"]
    },
    "is_active": { "type": "boolean" },
    "is_stationary": { "type": "boolean" },
    "media": { "type": "array" },
    "members": { "type": "array" },
    "name": {"type": "string"},
    "place_id": {"type": "string" },
    "slug": {"type": "string"},
    "station_type": {"type": "string"},
    "thing_ids": {"type": "array"},
    "utc_offset": { "type": "number" },
    "website_url": {"type": "string"}
  },
  "required": ["_id", "activated_at", "altitude", "datastreams_ids", "enabled", "geo", "is_active", "place_id", "station_type", "thing_ids"],
  "additionalProperties": false
}