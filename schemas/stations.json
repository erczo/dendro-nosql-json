{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": { 
      "type": "string",
      "maxLength": 24 
    },
    "activated_at": { 
      "type": "string", 
      "pattern": "/^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$/"
    },
    "altitude": {
      "type": "object",
      "properties": {
        "elevation": {"type": "number"}
      },
      "required": ["elevation"]
    },
    "created_at": { 
      "type": "string", 
      "pattern": "/^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$/"
    },
    "deactivated_at": {
      "type": "string",
      "pattern": "/^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2,}Z$/"
    },
    "enabled": {"type": "boolean"},
    "full_name": {
      "type": "string",
      "maxLength": 200
    },
    "geo": {
      "type": "object",
      "properties": {
        "coordinates": {
          "type": "array",
          "minLength": 2,
          "maxLength": 2,
          "items": {"type": "number"}
        },
        "type": {
          "type": "string",
          "enum": ["Point"]
        }
      },
      "required": ["coordinates", "type"]
    },
    "is_active": {"type": "boolean"},
    "is_stationary": {"type": "boolean"},
    "media": { 
      "type": "array",
      "minItems": 0,
      "maxItems": 5,
      "items": {
        "type": "object",
        "properties": {
          "sizes": {
            "type": "object",
            "properties": {
              "large": {
                "type": "object",
                "properties": {
                  "h": {"type": "number"},
                  "w": {"type": "number"}
                }
              },
              "medium": {
                "type": "object",
                "properties": {
                  "h": {"type": "number"},
                  "w": {"type": "number"}
                }
              },
              "thumb": {
                "type": "object",
                "properties": {
                  "h": {"type": "number"},
                  "w": {"type": "number"}
                }
              }
            },
            "required": ["large", "medium", "thumb"]
          },
          "type": {
            "type": "string",
            "enum": ["photo"]
          },
          "url": {
            "type": "string",
            "format": "url"
          }
        }
      } 
    },
    "members": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "organization_id": {
            "type": "string",
            "pattern": "/^[a-f\d]{24}$/",
            "maxLength": 24
          },
          "person_id": {
            "type": "string",
            "pattern": "/^[a-f\d]{24}$/",
            "maxLength": 24
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 50
            }
          }
        },
        "required": ["roles"]
      }
    },
    "name": {"type": "string"},
    "place_id": {"type": "string"},
    "slug": {
      "type": "string",
      "pattern": "/[a-z]+[0-9]+[-]/"
    },
    "station_type": {
      "type": "string",
      "enum": ["weather"]
    },
    "thing_ids": {
      "type": "array",
      "minItems": 1,
      "items": { 
      "type": "string",
      "pattern": "/^[a-f\d]{24}$/",
      "maxLength": 24 
    }
    },
    "utc_offset": {"type": "number"},
    "website_url": {
      "type": "string",
      "format": "url"
    }
  },
  "required": ["enabled", "is_active", "is_stationary", "name", "station_type", "utc_offset"],
  "additionalProperties": false
}