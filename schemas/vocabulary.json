{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "maxLength": 50
    },
    "created_at": {"$ref": "#/definitions/isoDate"},
    "description": {"type": "string"},
    "label": {
      "type": "string",
      "maxLength": 50
    },
    "scheme_id": {
      "type": "string",
      "maxLength": 50
    },
    "terms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "abbreviation": {"type": "string"},
          "definition": {"type": "string"},
          "label": {
            "type": "string",
            "maxLength": 50
          },
          "name": {"type": "string"}
        },
        "required": ["label", "name"]
      }
    }
  },
  "definitions": {
    "isoDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}[T][0-9]{2}:[0-9]{2}:[0-9]{2}|.|[0-9]{0,3}Z$"
    }
  },
  "required": ["_id", "label", "scheme_id"],
  "additionalProperties": false
}